@model TkanicaWebApp.Models.EmployeeMemberGroup

@{
    ViewData["Title"] = "Brisanje angažovanja";
    string employeeName = $"{Model.Employee.FirstName} {Model.Employee.LastName}";
    string groupName = Model.MemberGroup.Name;
}

<h1>Brisanje angažovanja</h1>

<h3>Da li ste sigurni da želite da obrišete angažovanje?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Zaposleni
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => employeeName)
        </dd>
        <dt class = "col-sm-2">
            Grupa članova
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => groupName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Brisanje" class="btn btn-danger" /> |
        <a asp-action="Index">Povratak na listu</a>
    </form>
</div>
