@model TkanicaWebApp.Models.AccountNumber

@{
    ViewData["Title"] = "Brisanje broja računa";
    string owner = Model.ClientId != null ?
        Model.Client.Name : Model.BalanceId != null ?
        Model.Balance.Name : "Nema vlasnika" ;
    int transactionsCount = Model.ClientId != null ?
        Model.Client.CreditorTransactions.Count + Model.Client.DebtorTransactions.Count : Model.BalanceId != null ?
        Model.Balance.Transactions.Count : 0;
}

<h1>Brisanje broja računa</h1>

<h3>Da li ste sigurni da želite da obrišete broj računa?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Broj računa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BankAccountNumber)
        </dd>
        <dt class = "col-sm-2">
            Banka
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bank)
        </dd>
        <dt class = "col-sm-2">
            Vlasnik
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => owner)
        </dd>
        <dt class="col-sm-2">
            Broj transakcija
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => transactionsCount)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Brisanje" class="btn btn-danger" /> |
        <a asp-action="Index">Povratak na listu</a>
    </form>
</div>
