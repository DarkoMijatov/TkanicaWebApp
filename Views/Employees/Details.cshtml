@model TkanicaWebApp.Models.Employee

@{
    ViewData["Title"] = "Podaci o zaposlenom";
    var earningType = Model.EarningType.Name;
    var payPeriod = Model.PayPeriod.Name;
}

<h1>Podaci o zaposlenom</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ime
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Prezime
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Pozicija
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Datum rođenja
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            Početak zaposlenja
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            Kraj zaposlenja
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            Vrsta zarade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => earningType)
        </dd>
        <dt class = "col-sm-2">
            Iznos zarade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EarningAmount)
        </dd>
        <dt class = "col-sm-2">
            Period plaćanja
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => payPeriod)
        </dd>
        <dt class = "col-sm-2">
            Dodatni troškovi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OtherExpenses)
        </dd>
        <dt class = "col-sm-2">
            Opis dodatnih troškova
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OtherExpensesDescription)
        </dd>
        <dt class = "col-sm-2">
            Datum kreiranja
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            Datum izmene
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
        <dt class="col-sm-2">
            Grupe članova
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var group in Model.EmployeeMemberGroups)
                {
                    string name = group.MemberGroup.Name;
                    <li>
                        <a asp-controller="MemberGroups" asp-action="Details" asp-route-id="@group.MemberGroupId">@Html.DisplayFor(model => name)</a>
                    </li>
                }
            </ul>
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
