@model TkanicaWebApp.Models.Employee

@{
    ViewData["Title"] = "Novi zaposleni";
}

<h1>Novi zaposleni</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Ime
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                Prezime
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                Pozicija
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                Datum rođenja
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                Početak zaposlenja
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                Prestanak zaposlenja
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> Aktivan
                </label>
            </div>
            <div class="form-group">
                Vrsta zarade
                <select asp-for="EarningTypeId" class="form-control" asp-items="ViewBag.EarningTypeId"></select>
            </div>
            <div class="form-group">
                Iznos zarade
                <input asp-for="EarningAmount" class="form-control" />
                <span asp-validation-for="EarningAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                Period plaćanja
                <select asp-for="PayPeriodId" class="form-control" asp-items="ViewBag.PayPeriodId"></select>
            </div>
            <div class="form-group">
                Dodatni troškovi
                <input asp-for="OtherExpenses" class="form-control" />
                <span asp-validation-for="OtherExpenses" class="text-danger"></span>
            </div>
            <div class="form-group">
                Opis dodatnih troškova
                <input asp-for="OtherExpensesDescription" class="form-control" />
                <span asp-validation-for="OtherExpensesDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Povratak na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
