@model TkanicaWebApp.Models.MembershipFee

@{
    ViewData["Title"] = "Brisanje članarine";
}

<h1>Brisanje članarine</h1>

<h3>Da li ste sigurni da želite da obrišete članarinu?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naziv
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Grupa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberGroup.Name)
        </dd>
        <dt class = "col-sm-2">
            Iznos
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Brisanje" class="btn btn-danger" /> |
        <a asp-action="Index">Povratak na listu</a>
    </form>
</div>
