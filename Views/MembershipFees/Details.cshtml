@model TkanicaWebApp.Models.MembershipFee

@{
    ViewData["Title"] = "Podaci o članarini";
    int activeCount = Model.Members.Count(x => x.Active);
    int totalCount = Model.Members.Count;
}

<h1>Podaci o članarini</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naziv
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Grupa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberGroup.Name)
        </dd>
        <dt class = "col-sm-2">
           Iznos
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            Datum kreiranja
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            Datum izmene
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
        <dt class="col-sm-2">
            Broj aktivnih članova
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => activeCount)
        </dd>
        <dt class="col-sm-2">
            Ukupan broj članova
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => totalCount)
        </dd>
        <dt class="col-sm-2">
            Članovi
        </dt>
        <ul class ="col-sm-2">
            @foreach(var member in Model.Members)
            {
                string name = $"{member.FirstName} {member.LastName}";
                <li>
                    <a asp-controller="Members" asp-action="Details" asp-route-id="@member.Id">@Html.DisplayFor(member => name)</a>
                </li>
            }
        </ul>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Izmena</a> |
    <a asp-action="Index">Povratak na listu</a>
</div>
