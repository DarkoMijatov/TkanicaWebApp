@model TkanicaWebApp.Models.Clothing

@{
    ViewData["Title"] = "Brisanje komada nošnje";
    string gender = TkanicaWebApp.Classes.Constants.Gender.GetValueOrDefault(Model.Gender);
    string age = TkanicaWebApp.Classes.Constants.Age.GetValueOrDefault(Model.Age);
}

<h1>Brisanje komada nošnje</h1>

<h3>Da li ste sigurni da želite da obrišete komad nošnje?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Vrsta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClothingType.Name)
        </dd>
        <dt class = "col-sm-2">
            Oblast
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClothingRegion.Name)
        </dd>
        <dt class = "col-sm-2">
            Pol
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => gender)
        </dd>
        <dt class = "col-sm-2">
            Uzrast
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => age)
        </dd>
        <dt class = "col-sm-2">
            Veličina
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class = "col-sm-2">
            Fotografija
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Brisanje" class="btn btn-danger" /> |
        <a asp-action="Index">Povratak na listu</a>
    </form>
</div>
