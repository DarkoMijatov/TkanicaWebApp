@model TkanicaWebApp.ViewModels.PageViewModel<Transaction>

@{
    ViewData["Title"] = "Transakcije";
}

<h1>Lista transakcija</h1>

<p>
    <a asp-action="Create">Dodaj</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sort="transactionNumberAsc" asp-route-currentSort="@Model.CurrentSort">Broj transakcije</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="transactionTypeAsc" asp-route-currentSort="@Model.CurrentSort">Vrsta transakcije</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="balanceAsc" asp-route-currentSort="@Model.CurrentSort">Račun</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="debtorAsc" asp-route-currentSort="@Model.CurrentSort">Uplatilac</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="creditorAsc" asp-route-currentSort="@Model.CurrentSort">Primalac</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="referenceNumberAsc" asp-route-currentSort="@Model.CurrentSort">Poziv na broj</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="amountAsc" asp-route-currentSort="@Model.CurrentSort">Iznos</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="descriptionAsc" asp-route-currentSort="@Model.CurrentSort">Opis</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="isPaidAsc" asp-route-currentSort="@Model.CurrentSort">Realizovano</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="transactionDateAsc" asp-route-currentSort="@Model.CurrentSort">Datum transakcije</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="paidDateAsc" asp-route-currentSort="@Model.CurrentSort">Datum plaćanja</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.List) {
            string paid = item.Paid ? "da" : "ne";
            string debtor = item.MemberId.HasValue ?
                item.Member.FullName : item.DebtorId.HasValue ?
                item.Debtor.Name : @"KUD ""Pargar""";
            string creditor = item.EmployeeId.HasValue ?
                item.Employee.FullName : item.CreditorId.HasValue ?
            item.Creditor.Name : @"KUD ""Pargar""";

            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => debtor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => creditor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => paid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaidDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Izmena</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Brisanje</a>
            </td>
        </tr>
}
    </tbody>
</table>
