@model TkanicaWebApp.ViewModels.RehearsalViewModel

@{
    ViewData["Title"] = "Izmena probe";
}

<h1>Izmena podataka o probi</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                Datum
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                Zaposleni
                <select asp-for="EmployeeIds" class="form-control" multiple="multiple" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                Članovi
                <select asp-for="MemberIds" class="form-control" multiple="multiple" asp-items="ViewBag.MemberId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Povratak na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
